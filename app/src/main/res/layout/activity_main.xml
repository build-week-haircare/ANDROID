<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/main_layout">



    <Button
            android:id="@+id/signup_button"
            android:layout_gravity="center"
            android:padding="35dp"
            android:paddingTop="2000dp"
            android:layout_margin="22dp"
            android:layout_width="277dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Sign up"
            tools:layout_editor_absoluteX="58dp"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/stylist_button"/>

    <Button
            android:id="@+id/user_button"
            android:layout_gravity="center"
            android:padding="35dp"
            android:layout_margin="22dp"
            android:textSize="15dp"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:text="Looking for haircut"
            tools:layout_editor_absoluteX="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/stylist_button"/>

    <Button
            android:id="@+id/stylist_button"
            android:layout_gravity="center"
            android:padding="35dp"
            android:layout_margin="22dp"
            android:textSize="15dp"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:text="Stylist Login"
            tools:layout_editor_absoluteY="278dp"
            android:layout_marginStart="8dp" />

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_holder"


        />

</androidx.appcompat.widget.LinearLayoutCompat>
