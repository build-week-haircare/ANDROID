<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="66dp"
            android:layout_height="187dp"
            android:layout_marginBottom="176dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/review1_pic1" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="307dp"
            android:layout_height="108dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="200dp"
            android:text="Chad is fantastic! he greets people as they enter, remembers faces,names and makes sure your experience is excellent every time. he really cares about  his craft, the shop itself and the equipment within. Highly recommend him as a stylist."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView8" />

    <ImageView
            android:id="@+id/imageView9"
            android:layout_width="66dp"
            android:layout_height="152dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/review1_pic2" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="312dp"
            android:layout_height="123dp"
            android:layout_marginStart="16dp"
            android:text=" I want to say Thank you to Chad. Today (9/26/2017) I came in to get my son's (who is three) haircut and it proved to be a very traumatic experience for him. This was no fault to Chad but his fear of getting his hair cut in general. Chad talked with him and explained everything, was gentle and even accommodating with cartoons. "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.792" />
</androidx.constraintlayout.widget.ConstraintLayout>