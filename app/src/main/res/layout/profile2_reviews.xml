<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="66dp"
            android:layout_height="187dp"
            android:layout_marginBottom="176dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/review2_pic2" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="307dp"
            android:layout_height="108dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="200dp"
            android:text="This hair salon, although relatively new to the area, is run and owned by ladies with a lot of experience. The shop is clean, the owners and stylists skilled and professional, and the atmosphere very relaxing.  "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView8" />

    <ImageView
            android:id="@+id/imageView9"
            android:layout_width="66dp"
            android:layout_height="152dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ashley_profile" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="312dp"
            android:layout_height="123dp"
            android:layout_marginStart="16dp"
            android:text="Owner and Stylists are excellent. Very professional and caring for their customers. Go the extra mile to be sure you are completely satisfied. Well trained and courteous. "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.792" />
</androidx.constraintlayout.widget.ConstraintLayout>